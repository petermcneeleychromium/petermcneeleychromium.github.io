{
  "manifest_version": 3,
  "name": "WebGPU Shader Debugger BETA",
  "version": "1.1",
  "description": "Intercepts and replaces WGSL shader code in createShaderModule calls for debugging. THIS EXTENSION IS FOR BETA TESTING",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "hook.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}

